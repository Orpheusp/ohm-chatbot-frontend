{
  "name": "OHM Chatbot",
  "version": "1.0.0",
  "description": "Chatbot for CMU student onboarding.",
  "permissions": ["storage", "http://127.0.0.1:5000/*"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/ohm_icon16.png",
      "32": "images/ohm_icon32.png",
      "48": "images/ohm_icon48.png",
      "128": "images/ohm_icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/ohm_icon16.png",
    "32": "images/ohm_icon32.png",
    "48": "images/ohm_icon48.png",
    "128": "images/ohm_icon128.png"
  },
  "manifest_version": 2
}
